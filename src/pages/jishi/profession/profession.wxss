.container {
    height: 100%;
}

.profession {
    flex-wrap: wrap;
    height: 91rpx;
}

.profession .box text {
    font-size: 32rpx;
    margin-left: 30rpx;
    line-height: 91rpx;
}

.profession .box {
    border: 1px solid #eeeeee;
    width: 100%;
    height: 91rpx;
}

.data {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.profession .box .sign {
    width: 35rpx;
    height: 35rpx;
    margin-right: 26rpx;
}

.label {
    display: block;
    width: 100%;
    height: 91rpx;
    border-bottom: 1rpx solid #eeeeee;
}

/* 点击字体实现变色 */

.normal {
    color: black;
}

.active {
    color: #ff4919;
}

/* 点击图片显示隐藏 */

.hide {
    display: none;
}

.show {
    display: block;
}

/* 底部 */

.button {
    position: fixed;
    height: 100rpx;
    width: 100%;
    background-color: #ffffff;
    bottom: 0rpx;
    display: flex;
    justify-content: center;
}


button{
    border: none;
}

.button .delete {
    color: #666666;
    text-align: center;
    line-height: 100rpx;
    width: 50%;
    height: 100%;
    border-top: 1px solid #e5e5e5;
}

.button .true {
    width: 50%;
    height: 100%;
    background-image: linear-gradient(90deg, #35abfe 0%, #3d70f7 100%);
    color: #ffffff;
    text-align: center;
    line-height: 100rpx;
}