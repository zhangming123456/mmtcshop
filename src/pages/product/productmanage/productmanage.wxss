page {
    background-color: #f4f4f4;
}

.t-navbar {
    color: #282828;
    text-align: center;
    background-color: #fff;
    white-space: nowrap;
    /* position: fixed; */
    z-index: 100;
    left: 0;
    right: 0;
    top: 0;
    height: 90rpx;
    border: 1prx solid #ffffff;
}

.t-navbar .t-flex {
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: flex-start;
}

.t-flex .t-nav-item {
    line-height: 90rpx;
    width: 33.333333333%;
    font-size: 32rpx;
}

.border-r {
    position: relative;
}

.border-r:after {
    content: ' ';
    position: absolute;
    left: auto;
    background: #ddd;
    right: 0;
    top: 32rpx;
    height: 100%;
    bottom: 0;
    width: 2px;
    height: 27rpx;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
}

.t-refund {
    margin-top: 24rpx;
}

.t-topStatus {
    height: 85rpx;
    width: 100%;
    /* background-color: skyblue; */
    border: 1rpx solid #eeeeee;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #ffffff;
}

.t-shopName {
    font-size: 28rpx;
    color: #999999;
    margin-left: 30rpx;
    line-height: 85rpx;
}

.t-statusBar {
